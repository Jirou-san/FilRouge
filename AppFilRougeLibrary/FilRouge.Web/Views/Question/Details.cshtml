@model FilRouge.Model.Models.QuestionModel

@{
    ViewBag.Title = "Details";
}

<h2>Question - Detail</h2>
<hr />
<h3> @Html.DisplayFor(modelItem => modelItem.Content)</h3><br/>
@Html.DisplayFor(modelItem => modelItem.Technology)


<table class="table table-dark table-hover">
    <tr>
        <th>
            Answer
        </th>
        <th>
            True Answer
        </th>

        @foreach (var reponse in Model.Reponses)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => reponse.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => reponse.IsTrue)
            </td>
        </tr>
    }
    </table>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
